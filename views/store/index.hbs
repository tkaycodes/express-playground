<div class="custom-container">

	<h1>{{title}}</h1>
	<p>Welcome to {{title}}</p>

	<div class="row">
		{{# each products  }}

				<div class="col-sm-6 col-lg-3 py-2">
					<div class="card h-100">
						<img class="card-img-top" src="{{imagePath}}" alt="Card image cap" style="height: 350px;">
						<div class="card-body">
							<h5 class="card-title">{{title}}</h5>
							<p class="card-text">{{description}}</p>
						</div>
						<div class="card-footer">
							<small class="text-muted" style="font-size: 22px;font-weight: bold;">${{price}}</small>
							<a href="/add-to-cart/" class="btn btn-success" style="float: right" role="button">Add to cart</a></button>
						</div>
					</div>
				</div>

		{{/each}}
	</div>


</div>
